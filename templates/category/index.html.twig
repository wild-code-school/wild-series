{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            {# Lien vers les series : #}
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
        </div>
    {% endfor %}
    <a href="{{ path('index') }}">
        Retour à l'accueil
    </a>
{% endblock %}